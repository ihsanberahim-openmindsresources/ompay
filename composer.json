{
    "name": "omconnect/pay",
    "description": "handle payments for IAP (Apple/GooglePlay)",
    "keywords": [
        "openmindsresources",
        "payment"
    ],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Omconnect\\Pay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omconnect\\Pay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Ihsan Berahim",
            "email": "ihsanberahim@openmindsresources.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "firebase/php-jwt": "^6.3.1",
        "google/apiclient": "^2.13",
        "stripe/stripe-php": "^7.57",
        "guzzlehttp/guzzle": "^7.0.1",
        "illuminate/database": "^9.0",
        "illuminate/support": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Omconnect\\Pay\\OmPayServiceProvider"
            ],
            "aliases": {
                "OmPay": "Omconnect\\Pay\\OmPayFacade"
            }
        }
    }
}
